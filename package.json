{
  "name": "@chiubaka/genesis-root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "nx build",
    "build:affected": "nx affected --target=build",
    "build:ci": "yarn build:affected --base=$NX_BASE --head=$NX_HEAD",
    "deploy": "nx deploy $@ --configuration=production",
    "deploy:ci": "yarn deploy",
    "deploy:genesis:local": "./scripts/deployGenesisLocal.sh",
    "deploy:preset:local": "./scripts/deployPresetLocal.sh",
    "e2e": "nx e2e",
    "e2e:affected": "nx affected --target=e2e",
    "e2e:all": "nx run-many --target=e2e --all",
    "lint": "nx lint",
    "lint:affected": "nx affected --target=lint",
    "lint:all": "yarn lint:root && yarn lint:packages",
    "lint:ci": "yarn lint:root && yarn lint:affected --base=$NX_BASE --head=$NX_HEAD",
    "lint:fix:all": "yarn lint:fix:root; yarn lint:fix:packages",
    "lint:fix:packages": "yarn lint:packages --fix",
    "lint:fix:root": "yarn lint:root --fix",
    "lint:packages": "nx run-many --target=lint --all",
    "lint:root": "yarn eslint .",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "start": "nx serve",
    "start:verdaccio": "docker-compose up -d && npx npm-cli-login -u test -p test -e test@chiubaka.com -r http://localhost:4873",
    "test": "nx test",
    "test:affected": "nx affected --target=test",
    "test:all": "nx run-many --target=test --all",
    "test:ci": "./scripts/test-ci.sh",
    "test:ci:affected": "yarn test:affected --ci --coverage --base=$NX_BASE --head=$NX_HEAD && yarn e2e:affected --ci --base=$NX_BASE --head=$NX_HEAD",
    "test:ci:all": "yarn test:all --ci --coverage && yarn e2e:all --ci"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@swc/helpers": "0.5.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@chiubaka/eslint-config": "^0.6.2",
    "@chiubaka/tsconfig": "^0.1.0",
    "@nx/cypress": "16.8.1",
    "@nx/devkit": "16.8.1",
    "@nx/eslint-plugin": "16.8.1",
    "@nx/jest": "16.8.1",
    "@nx/js": "16.8.1",
    "@nx/linter": "16.8.1",
    "@nx/plugin": "16.8.1",
    "@nx/storybook": "16.8.1",
    "@nx/web": "16.8.1",
    "@nx/webpack": "16.8.1",
    "@nx/workspace": "16.8.1",
    "@swc-node/register": "^1.4.2",
    "@swc/cli": "0.1.62",
    "@swc/core": "^1.2.173",
    "@types/eslint": "^8.4.5",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "29.4.4",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.46.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jest": "29.4.3",
    "jest-environment-jsdom": "29.4.3",
    "jest-junit": "^14.0.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lint-staged": "^13.0.3",
    "npm-cli-login": "^1.0.0",
    "nx": "16.8.1",
    "portfinder": "^1.0.28",
    "prettier": "^2.6.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.1.6",
    "verdaccio": "^5.14.0",
    "verdaccio-auth-memory": "^10.2.0",
    "verdaccio-memory": "^10.3.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "packageManager": "yarn@3.2.3"
}
